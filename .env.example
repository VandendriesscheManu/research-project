# API
API_PORT=8001
API_KEY=your_secret_api_key_here

# LLM Configuration
# Provider options: ollama (local), groq (fast, free)
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# Groq API (get free key at https://console.groq.com - 30 req/min free, very fast!)
GROQ_API_KEY=your_groq_api_key_here

# Ollama (local, used as fallback when Groq fails)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2

# MCP
MCP_BASE_URL=http://mcp-server:8000

# Postgres
POSTGRES_DB=chatdb
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=your_postgres_password
DB_HOST=db
DB_PORT=5432

# Gist Configuration (for dynamic Cloudflare URL updates)
# 1. Create a GitHub Personal Access Token with 'gist' scope at: https://github.com/settings/tokens
# 2. On first run, the url-extractor will create a new Gist and display the GIST_ID and GIST_RAW_URL
# 3. Add those values here
GITHUB_TOKEN=your_github_personal_access_token_here
GIST_ID=your_gist_id_here
GIST_RAW_URL=https://gist.githubusercontent.com/YOUR_USERNAME/YOUR_GIST_ID/raw/cloudflare_url.txt
